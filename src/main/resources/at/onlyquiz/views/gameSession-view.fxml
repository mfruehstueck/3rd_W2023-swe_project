<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" stylesheets="@../styles/onlyQuiz.css"
        styleClass="background" spacing="20.0" alignment="CENTER">

    <!-- Box fÃ¼r die Frage -->
    <VBox styleClass="question-box">
        <Label text="Frage: Was ist die Hauptstadt von Deutschland?" styleClass="question-label"/>
    </VBox>

    <!-- Buttons zum Beantworten -->
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Button text="A. Berlin" styleClass="answer-button" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button text="B. Paris" styleClass="answer-button" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button text="C. Rom" styleClass="answer-button" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Button text="D. Madrid" styleClass="answer-button" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

</VBox>
