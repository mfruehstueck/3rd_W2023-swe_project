<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<GridPane fx:id="baseContainer" alignment="TOP_CENTER" prefHeight="720.0" prefWidth="1280.0" styleClass="background"
          xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="at.onlyquiz.controller.GameSessionController">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="25.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="25.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" percentHeight="15.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" percentHeight="35.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <GridPane GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Label fx:id="totalScoreLabel" styleClass="ui-label" text="Total Score: "/>
                            </children>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <padding>
                                <Insets left="25.0"/>
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                            <children>
                                <Label fx:id="achievableScoreLabel" styleClass="ui-label" text="achievable Score:"/>
                            </children>
                            <padding>
                                <Insets left="25.0"/>
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="2">
                            <children>
                                <Label fx:id="timeLabel" styleClass="ui-label" text="Time: 00:00"/>
                            </children>
                            <padding>
                                <Insets left="25.0"/>
                            </padding>
                        </HBox>
                    </children>
                </GridPane>
            </children>
        </GridPane>
        <GridPane GridPane.columnIndex="2">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Label fx:id="questionCounterLabel" styleClass="ui-label" text="Question number: XX"/>
                    </children>
                </HBox>
            </children>
        </GridPane>
        <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" GridPane.columnIndex="1"
              GridPane.rowIndex="1">
            <children>
                <Button fx:id="fiftyFiftyJokerButton" mnemonicParsing="false" onAction="#useFiftyFiftyJoker"
                        styleClass="joker" text="50/50"/>
                <Button fx:id="audienceJokerButton" mnemonicParsing="false" onAction="#useAudienceJoker"
                        styleClass="joker" text="Aud Joker"/>
                <Button fx:id="chatJokerButton" mnemonicParsing="false" onAction="#useChatJoker" styleClass="joker"
                        text="Chat Joker"/>
            </children>
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
            <padding>
                <Insets bottom="15.0"/>
            </padding>
        </HBox>
        <GridPane GridPane.columnIndex="1" GridPane.rowIndex="2">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" percentHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" percentHeight="50.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" percentHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <HBox fx:id="questionBox" alignment="CENTER" styleClass="question-box" GridPane.hgrow="SOMETIMES">
                    <children>
                        <GridPane alignment="CENTER" HBox.hgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                            </rowConstraints>
                            <children>
                                <Label fx:id="questionLabel" alignment="CENTER" contentDisplay="CENTER"
                                       styleClass="question-textField" text="QuestionLabel" GridPane.hgrow="ALWAYS"/>
                                <TextField fx:id="questionTextField" promptText="Type your Question here!"
                                           styleClass="question-textField"/>
                            </children>
                        </GridPane>
                    </children>
                </HBox>
                <GridPane alignment="CENTER" GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints fillWidth="false" halignment="CENTER" percentWidth="50.0"/>
                        <ColumnConstraints fillWidth="false" halignment="CENTER" percentWidth="50.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <GridPane alignment="CENTER">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints valignment="CENTER" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button fx:id="answerAButton" alignment="CENTER" mnemonicParsing="false"
                                        onAction="#selectAnswerA" styleClass="answer-button" text="answerA"/>
                                <TextField fx:id="answerATextField" alignment="CENTER" promptText="right"
                                           styleClass="answer-textField-right"/>
                            </children>
                        </GridPane>
                        <GridPane alignment="CENTER" GridPane.columnIndex="1">
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button fx:id="answerBButton" mnemonicParsing="false" onAction="#selectAnswerB"
                                        styleClass="answer-button" text="answerB"/>
                                <TextField fx:id="answerBTextField" alignment="CENTER" promptText="false"
                                           styleClass="answer-textField-wrong"/>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints/>
                            </columnConstraints>
                        </GridPane>
                        <GridPane alignment="CENTER" GridPane.rowIndex="1">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                            </columnConstraints>
                            <children>
                                <Button fx:id="answerCButton" mnemonicParsing="false" onAction="#selectAnswerC"
                                        styleClass="answer-button" text="answerC"/>
                                <TextField fx:id="answerCTextField" alignment="CENTER" promptText="false"
                                           styleClass="answer-textField-wrong"/>
                            </children>
                            <rowConstraints>
                                <RowConstraints/>
                            </rowConstraints>
                        </GridPane>
                        <GridPane alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <Button fx:id="answerDButton" mnemonicParsing="false" onAction="#selectAnswerD"
                                        styleClass="answer-button" text="answerD"/>
                                <TextField fx:id="answerDTextField" alignment="CENTER" promptText="false"
                                           styleClass="answer-textField-wrong"/>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                            </rowConstraints>
                        </GridPane>
                    </children>
                </GridPane>
            </children>
        </GridPane>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="2">
            <children>
                <Button fx:id="stopButton" mnemonicParsing="false" onAction="#pressStopButton" styleClass="stop-button"
                        text="Stop"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="commit-button"
              GridPane.columnIndex="2" GridPane.rowIndex="2">
            <children>
                <GridPane alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button fx:id="commitButton" alignment="CENTER" mnemonicParsing="false"
                                onAction="#pressCommitButton" styleClass="commit-button" text="commit"/>
                        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#pressNextButton"
                                styleClass="commit-button" text="next"/>
                        <Button fx:id="endButton" mnemonicParsing="false" onAction="#pressEndButton"
                                styleClass="answer-button" text="End"/>
                    </children>
                </GridPane>
            </children>
        </HBox>
        <GridPane GridPane.columnIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <BarChart fx:id="votingResultsChart" legendVisible="false" prefHeight="381.0" prefWidth="640.0"
                          style="-fx-region-background: blue;">
                    <xAxis>
                        <CategoryAxis animated="false" prefHeight="11.0" prefWidth="556.0" side="BOTTOM"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Percent" minorTickCount="10" side="LEFT" tickLabelGap="10.0">
                            <tickLabelFont>
                                <Font size="15.0"/>
                            </tickLabelFont>
                        </NumberAxis>
                    </yAxis>
                </BarChart>
            </children>
        </GridPane>
    </children>
    <stylesheets>
        <URL value="@../styles/standard/general.css"/>
        <URL value="@../styles/standard/gameSession.css"/>
    </stylesheets>
</GridPane>
